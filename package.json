{
  "name": "coc-solidity",
  "description": "Solidity language server for coc.nvim",
  "version": "0.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/qiuxiang/coc-solidity"
  },
  "keywords": [
    "coc.nvim",
    "solidity"
  ],
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "scripts": {
    "build": "esbuild src/index.ts --platform=node --bundle --external:coc.nvim --outdir=dist",
    "build-server": "esbuild vscode-solidity/src/server.ts --bundle --platform=node --external:solhint --external:solium --external:glob --external:solc --outdir=dist",
    "release": "npm run build -- --minify && npm run build-server -- --minify"
  },
  "dependencies": {
    "prettier-plugin-solidity": "^1.0.0-beta.19"
  },
  "devDependencies": {
    "@types/node": "^17.0.21",
    "@types/prettier": "^2.4.4",
    "coc.nvim": "^0.0.80",
    "esbuild": "^0.14.23",
    "prettier": "^2.5.1"
  },
  "engines": {
    "coc": "^0.0.80"
  },
  "activationEvents": [
    "onLanguage:solidity"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "coc-solidity configuration",
      "properties": {
        "solidity.includePath": {
          "type": "string",
          "default": "node_modules",
          "description": "Default directory for Packages Dependencies, i.e: 'node_modules', 'lib'. This is used to avoid typing imports with that path prefix"
        }
      }
    }
  }
}
